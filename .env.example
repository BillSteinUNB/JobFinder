# ---- Adzuna API ----
# Create an account at https://developer.adzuna.com/
ADZUNA_APP_ID=your_adzuna_app_id_here
ADZUNA_APP_KEY=your_adzuna_app_key_here

# ---- Local Paths ----
# SQLite metadata DB path
METADATA_DB_PATH=data/jobs.db

# Chroma persistence directory (local vector DB files)
CHROMA_PERSIST_DIR=data/chromadb

# Chroma collection name for job embeddings
CHROMA_COLLECTION=jobs

# ---- Embeddings ----
# Default embedding model
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2

# ---- App ----
# Optional: Streamlit app title / environment marker
APP_ENV=local
